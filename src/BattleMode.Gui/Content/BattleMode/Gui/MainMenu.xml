<Window id="Window" X="0.5*" Y="0.66*" Width="0.5*" Height="0.33*">
    <Grid id="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
      <Button Text="Attack" id="attack" OnPressed="AttackSelected"/>
      <Button Text="PKMN" id="pkmn" Grid.Row="1" OnPressed="PkmnSelected"/>
      <Button Text="Item" id="item" Grid.Column="1" OnPressed="ItemSelected" />
      <Button Text="Run" id="run" Grid.Column="1" Grid.Row="1" OnPressed="RunSelected" />
    </Grid>
</Window>