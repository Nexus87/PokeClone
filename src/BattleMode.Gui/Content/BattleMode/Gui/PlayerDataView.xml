<Grid id="Window" X="0.55*" Y="0.45*" Width="250" Height="0.15*">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <Label id="Name" TextHeight="28"/>
    <Spacer Grid.Row="1"/>
    <Grid Grid.Row="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label id="LevelLabel" Grid.Column="1" TextHeight="24"/>

        <Spacer Grid.Row="1" Grid.ColumnSpan="3" />

        <Label Text="hp:" Grid.Column="0" Grid.Row="2" TextHeight="18"/>
        <HpLine id="HpLine" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>

        <Spacer Grid.Row="3" Grid.ColumnSpan="3" />

        <HpText id="HpText" TextHeight="24" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</Grid>